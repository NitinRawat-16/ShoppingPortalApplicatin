@model IEnumerable<Model.Product> 
@{
    ViewBag.Title = "MyOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<table class="table  table-bordered  table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.ProductSize)
        </th>
    </tr>

    @foreach (var product in (IEnumerable<Model.Product>)Session["cart"])
    {
        @*@sum = product.ProductPrice + sum;*@
        <tr>
            <td>@Html.DisplayFor(m => product.ProductName)</td>
            <td>@product.ProductPrice.ToString("c")</td>
        </tr>
    }

    <tr>
        <td>Total</td>
        <td>@*@sum.ToString("c")*@</td>
    </tr>
</table>

